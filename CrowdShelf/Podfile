target 'CrowdShelf' do
    pod 'MTBBarcodeScanner', '~> 1.6.1'
    pod 'Alamofire', '~> 2.0'
end

target 'CrowdShelfTests' do
    pod 'MTBBarcodeScanner', '~> 1.6.1'
    pod 'Alamofire', '~> 2.0'
    
end	

